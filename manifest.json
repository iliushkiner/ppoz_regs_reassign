{
  "name": "Regs Reassign",
  "version": "1.2.1",
  "manifest_version": 2,
  "description": "Расширение позволяющее автоматический распределять обращения.",
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "IndexedDB/db.js",
      "helper.js",
      "background.js"
    ]
  },
  
  "permissions": [
    "http://ppoz-service-bal-01.prod.egrn:9001/*",
    "storage",
    "unlimitedStorage",
    "unlimited_storage"
  ],
  
  /*"externally_connectable": {
    "matches": [
      "*://localhost/*",
      "http://ppoz-service-bal-01.prod.egrn:9001/*"
    ]    
  },*/
  
  "browser_action": {
    "default_title": "Regs statistic",
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "content_scripts": [{
    /*"matches": ["<all_urls>"],*/
    "matches": ["http://ppoz-service-bal-01.prod.egrn:9001/*"],
    "js": [
        "jquery-3.5.1.min.js",
        "bootstrap/js/vendor/bootstrap.min.js",
        /*"bootstrap/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js",*/
        "IndexedDB/exdb.js",
        /*"IndexedDB/db.js",*/
        "content.js"
    ],
    
    "css": [
      "bootstrap/css/bootstrap.min.css",
      "bootstrap/css/bootstrap-theme.min.css",
      "content.css"
    ]    
  }]
}
